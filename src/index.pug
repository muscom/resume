extends /src/assets/nodes/templates/_basic

//- settings
block settings
    //- document setting
    -
        const settings = {
            title: 'Profile Overview',
            description: '',
            keywords: '',
            site_name: 'Resume'
        };
        const resumeHeader = content.resumeHeader;
        const resumeSub = content.resumeSub;
        const resume = content.resume;
        const experience = content.experience;
        const project = content.project;

        // Local date
        const local_date = function(date, option) {
            const default_option = {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            };
            const this_date = new Date(date);

            const this_option = !!option ? option : default_option;
            return new Intl.DateTimeFormat(lang, this_option).format(this_date);
        };

        const date_option = {
            detail: {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            },
            history: {
                year: 'numeric',
                month: 'long',
            }
        };

//- additional meta data.
block head
    //- add meta datas

//- main content
block body
    header#global-header
        .content-container
            h1
                ruby
                    | #{resumeHeader.name.content.label}
                    rt #{resumeHeader.name.content.pronunciation}
            section
                picture
                    if resumeHeader.photo.content.x2
                        source(srcset = resumeHeader.photo.content.x2 + ' 2x')
                    img(src = resumeHeader.photo.content.x1 alt = '')
                .difinitions
                    each val, key in resumeSub
                        -
                            let this_value = val.content;
                            if(key === 'birthDay') {
                                this_value = local_date(val.content, date_option.detail);
                            }
                            if(typeof val.content === 'boolean') {
                                if(lang === 'ja') {
                                    if(!!val.content) {
                                        this_value = 'あり';
                                    } else {
                                        this_value = 'なし';
                                    }
                                } else if(lang === 'en') {
                                    if(!!val.content) {
                                        this_value = 'Have';
                                    } else {
                                        this_value = 'Do not have';
                                    }
                                }
                            }
                        dl
                            dt #{!!locale[key] ? locale[key][lang] : key}
                            dd #{this_value}
    main
        article
            .content-container
                h2 履歴書
                section
                    h3 希望する職種・ポジション
                    for item in resume.objective.content
                        p #{item}
                section
                    h3 スキル
                        .list(data-layout='parallel')
                            ul
                                each val, key in resume.skill.content
                                    li #{key + ' : ' + val + '年'}
                section
                    h3 学歴
                    .table
                        table
                            tbody
                                for item in resume.education.content
                                    tr
                                        th #{local_date(item.period.to, date_option.history)}
                                        td #{item.event}
                section
                    h3 職務経歴
                    .table
                        table
                            tbody
                                for item in resume.history.content
                                    tr
                                        th #{local_date(item.period.from, date_option.history) + '-' + local_date(item.period.to, date_option.history)}
                                        td #{item.event}
        article
            .content-container
                h2 プロジェクト実績
                section.projects
                    for item in project
                        each val, key in item
                            section.project
                                h3
                                    span.project-name #{key}
                                    small #{local_date(val.content.period.to, date_option.history)}
                                    span.project-detail
                                        a(href = val.content.uri) #{val.content.uri}
                                p(style='text-align: center') #{val.content.description}
                                .list(data-layout='parallel')
                                    ul
                                        for lang in val.content.lang
                                            li #{lang}
                                .list
                                    ul
                                        for delivarable in val.content.delivarable
                                            li #{delivarable}
